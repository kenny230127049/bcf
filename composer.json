{
    "name": "lombabcf/website",
    "description": "Website lomba kreatif untuk siswa SMP dengan sistem pendaftaran dan pembayaran",
    "type": "project",
    "keywords": ["lomba", "pendaftaran", "pembayaran", "smp", "php"],
    "license": "MIT",
    "authors": [
        {
            "name": "LombaBCF Team",
            "email": "info@lombabcf.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-session": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "LombaBCF\\": "src/"
        },
        "files": [
            "config/database.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "LombaBCF\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs src/",
        "cs-fix": "phpcbf src/",
        "stan": "phpstan analyse src/",
        "post-install-cmd": [
            "mkdir -p uploads",
            "chmod 755 uploads"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
